{
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js"],
      "parser": "@typescript-eslint/parser"
    }
  ],
  "root": true,
  "extends": [
    "next/core-web-vitals",
    "next/typescript",
    "standard",
    "plugin:tailwindcss/recommended",
    "prettier"
  ],
  "plugins": ["import", "tailwindcss"],
  "rules": {
    "tailwindcss/classnames-order": "error",
    "no-use-before-define": "off",
    "no-useless-constructor": "off"
  }
}
